{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2024",
        "strict": true,
        "rootDir": "src",
        "outDir": "dist",
        "skipLibCheck": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
}